@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">FilmFiesta Admin</h2>
<div class="d-flex align-items-center justify-content-center">
    <form method="post" class="mt-5">
        <div class="form-floating">
            <input asp-for="LoginRequest.Email" class="form-control" type="email" placeholder="name@example.com" />
            <label asp-for="LoginRequest.Email"></label>
        </div>
        <div class="form-floating mt-1">
            <input asp-for="LoginRequest.Password" class="form-control" type="password" placeholder="Password" />
            <label asp-for="LoginRequest.Password"></label>
        </div>
        <input type="submit" value="Login" class="btn btn-success w-100 mt-3" />
        <div class="mt-3 text-center">
            @Model.ErrorMsg
        </div>
    </form>
</div>