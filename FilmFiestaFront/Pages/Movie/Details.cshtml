@page "{id:int}"
@model MovieDetailsModel
@{
    ViewData["Title"] = "Movie Details";
}

<div>
    @if (Model.movieDetail != null)
    {
        <div class="d-flex justify-content-between mb-1">
            <a class="btn btn-secondary" asp-page="/Movie/List">Go Back</a>
            
        </div>
        <div class="card">
            <div class="card-header">
                <h2 id="movie-title">@Model.movieDetail.Titre</h2>
            </div>
            <div class="card-body d-flex flex-row align-items-center">
                <img id="movie-image" class="card-img img-fluid m-2" style="width:20%;" src="@Model.movieDetail.Affiche" alt="movie poster" />
                <ul class="m-2 list-group w-100">
                    <li class="list-group-item">
                        <h6>Director</h6>
                        <small id="movie-director"  class="text-body-secondary">
                            @Model.movieDetail.Realisateur
                        </small>
                    </li>
                    <li class="list-group-item">
                        <h6>Release Date</h6>
                        <small id="movie-date" class="text-body-secondary">
                            @Model.movieDetail.Date_de_sortie
                        </small>
                    </li>
                    <li class="list-group-item">
                        <h6>Genres</h6>
                        <small id="movie-genres" class="text-body-secondary">
                            @Model.genres
                        </small>
                    </li>
                    <li class="list-group-item">
                        <h6>Description</h6>
                        <small id="movie-description" class="text-body-secondary">
                            @Model.movieDetail.Description
                        </small>
                    </li>
                </ul>
            </div>
            <div class="card-footer d-flex flex-row justify-content-around">
                <a class="btn btn-primary" asp-page="/Movie/Update" asp-route-id="@Model.movieDetail.Id">
                    Update
                </a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.movieDetail.Id">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    } else {
        <p>Error: No movie with this id exists.</p>
    }
</div>
